<!--pages/test/test.wxml-->

<nav-custom bgColor="" isBack="{{true}}">
    <view slot="backText" class="text-white">返回</view>
    <!-- <view slot="content">卡片</view> -->
</nav-custom>

<view class="theme-yellow">

    <common-swiper list="{{swiperList}}" isBottom="{{!true}}" bindclick="clickSwiper" height="200rpx" ></common-swiper>



    <menu-phone list="{{ProductData}}" order="{{productCart}}"  height="calc(100vh - 200rpx)"></menu-phone>

    <dialog show="{{!true}}" title="查询时间范围"  textConfirm="查询" bindsuccess="dialogConfirm" showTop="{{false}}" showBottom="{{false}}"> 
    <view slot="content" class="bg-white "  style="position:relative">
            <product-detail currentItem="{{CurrentItem}}"  height="80vh" ></product-detail>
            <product-sku  currentItem="{{CurrentItem}}" ></product-sku>
        </view>
    </dialog>

    <dialog show="{{!true}}" title="购物车"  textConfirm="确定"  showCancel="{{false}}" showTop="{{!false}}" showBottom="{{!false}}"> 
        <button  slot="top" class="cu-btn bg-red round " catchtap="clear">清空</button>
        <product-cart slot="content" order="{{MenuCartData}}"  show="{{!cartShow}}" ></product-cart>
    </dialog>

    <product-bar order="{{MenuCartData}}" bind:pay="menuToPay"  bind:cart="menuOpenCart" >
        <navigator class='cu-btn margin-right-sm round shadow-blur text-gray ' catchtap="menuOpenCart" >购物车</navigator>
    </product-bar> 



</view>

            
